<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardExperts"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="11dp">

    <LinearLayout
        android:id="@+id/expertViewmainContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10">

        <ImageView
            android:id="@+id/imgExpert"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp"
            android:src="@drawable/upload_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExpertName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_user"
                android:textColor="@android:color/black"
                android:textSize="@dimen/expert_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtExpertDegree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_user"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/expert_degree_size" />

            <TextView
                android:id="@+id/txtExpertDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_user"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="@dimen/expert_degree_size" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>