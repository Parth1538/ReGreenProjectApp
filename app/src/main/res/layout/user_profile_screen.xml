<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgUserProfileTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nursery_background_height"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/tut_bg" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/toolbarTheme">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_title"
                android:textSize="@dimen/upload_bill_text_size"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:id="@+id/cardUserProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_cardview_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/user_profile_cardview_margin_start"
            android:layout_marginEnd="@dimen/user_profile_cardview_margin_start"
            android:layout_marginTop="@dimen/user_profile_cardview_margin_top"
            app:cardCornerRadius="@dimen/user_profile_cardview_corner_radius"
            app:cardElevation="@dimen/user_profile_cardview_card_elevation"
            app:cardUseCompatPadding="true" >

            <EditText
                android:id="@+id/edtUserNameUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:layout_marginTop="@dimen/user_profile_name_margin_top"
                android:background="@drawable/rounded_corner_button_common"
                android:ems="10"
                android:hint="User Name"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/user_profile_name_margin_left" />

            <EditText
                android:id="@+id/edtEmailUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginTop="@dimen/user_profile_email_margin_top"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:paddingLeft="@dimen/user_profile_name_margin_left"
                android:background="@drawable/rounded_corner_button_common"
                android:ems="10"
                android:hint="Email Id"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtGenderUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:layout_marginTop="@dimen/user_profile_gender_margin_top"
                android:inputType="textPersonName"
                android:text="Gender" />

            <TextView
                android:id="@+id/txtGenderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_profile_gender_margin_top"
                android:layout_marginLeft="@dimen/user_profile_city_margin_top"
                android:text="Male" />

            <TextView
                android:id="@+id/txtMyPointsLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_profile_pointslabel_margin_top"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:inputType="textPersonName"
                android:text="My points"
                />

            <TextView
                android:id="@+id/txtMyPointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_profile_pointslabel_margin_top"
                android:layout_marginLeft="@dimen/user_profile_city_margin_top"
                android:text="265" />

            <EditText
                android:id="@+id/edtCityUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginTop="@dimen/user_profile_city_margin_top"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:paddingLeft="@dimen/user_profile_name_margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="City"
                android:background="@drawable/rounded_corner_button_common"/>


            <EditText
                android:id="@+id/edtBirthDateUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginTop="301dp"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:paddingLeft="@dimen/user_profile_name_margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="DD-MM-YYYY"
                android:background="@drawable/rounded_corner_button_common"/>


            <EditText
                android:id="@+id/edtMobileNoUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginTop="@dimen/user_profile_mobileno_margin_top"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:paddingLeft="@dimen/user_profile_name_margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Mobile No."
                android:background="@drawable/rounded_corner_button_common"/>


            <EditText
                android:id="@+id/edtChangePasswordUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_edittext_height"
                android:layout_marginTop="@dimen/user_profile_changepassword_margin_top"
                android:layout_marginLeft="@dimen/user_profile_name_margin_left"
                android:layout_marginRight="@dimen/user_profile_name_margin_left"
                android:paddingLeft="@dimen/user_profile_name_margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Change Password"
                android:background="@drawable/rounded_corner_button_common"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardUserProfilePic"
            android:layout_width="@dimen/user_profile_pic_cardview_height"
            android:layout_height="@dimen/user_profile_pic_cardview_width"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/user_profile_pic_cardview_margin_top"
            app:cardCornerRadius="@dimen/user_profile_pic_cardview_corner_radius"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/user_profile_pic_cardview_card_elevation"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/imgUserProfilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_border"
                android:src="@drawable/upload_photo" />

        </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnSaveUserProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_below="@+id/cardUserProfile"
        android:background="@drawable/signin_signup_button"
        android:text="@string/user_profile_save"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/user_profile_name_margin_left"
        android:layout_marginRight="@dimen/user_profile_name_margin_left">
    </Button>
    </RelativeLayout>
</ScrollView>