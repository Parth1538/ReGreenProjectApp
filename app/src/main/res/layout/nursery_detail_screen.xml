    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cd_view_nur_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="80dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_ic_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_red"
                android:layout_below="@+id/txtNurseryName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txtNurseryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raj Palnts"
                android:layout_toRightOf="@+id/img_ic_loc"
                android:textColor="@android:color/black"
                android:textSize="@dimen/nur_detail"
                />

            <TextView
                android:id="@+id/txtBestNursery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNurseryName"
                android:layout_toRightOf="@+id/img_ic_loc"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Ahmedabad Best Seller Ahmedabad Best Seller"
                android:textSize="@dimen/nur_detail"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBestNursery"
                android:layout_marginStart="@dimen/margins"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_phone" />

            <TextView
                android:id="@+id/txtContactNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBestNursery"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/imgPhone"
                android:text="Contact No:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/nur_detail" />

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:text="5 k.m."
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/nur_detail"
                android:visibility="gone"/>

        </RelativeLayout>
